                        "options": [
                            {
                                "value": "a",
                                "label": "$-3$ m/s"
                            },
                            {
                                "value": "b",
                                "label": "3 m/s"
                            },
                            {
                                "value": "c",
                                "label": "0 m/s"
                            },
                            {
                                "value": "d",
                                "label": "9 m/s"
                            }
                        ],
                        "correct": "b",
                        "explanation": "Tốc độ = $|\\text{vận tốc}| = |-3| = 3$ m/s."
                    }
                }
