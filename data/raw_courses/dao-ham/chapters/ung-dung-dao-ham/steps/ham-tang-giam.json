                        "options": [
                            {
                                "value": "a",
                                "label": "$x = 0, \\pm 2$"
                            },
                            {
                                "value": "b",
                                "label": "$x = \\pm 4$"
                            },
                            {
                                "value": "c",
                                "label": "$x = 0$"
