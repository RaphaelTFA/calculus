          "type": "quiz",
          "content": {
            "question": "Tính $\\lim_{x \\to 1} \\frac{x^2 - 1}{x - 1}$ = ?",
            "options": [
              { "value": "a", "label": "1" },
              { "value": "b", "label": "2" },
              { "value": "c", "label": "0" }
            ],
            "correct": "b",
            "explanation": "Phân tích: $\\frac{x^2-1}{x-1} = \\frac{(x-1)(x+1)}{x-1} = x+1 \\to 2$"
          }
        }
